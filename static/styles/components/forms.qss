/* Estilos para diálogos */
.dialog-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 15px;
}

/* Campos de diálogo */
#codigoInput, #nombreInput, #versionInput {
    min-height: 36px;
    border-radius: 4px;
}

/* Grupos de diálogo */
#basicInfoGroup, #configGroup {
    border: 2px solid;
    border-radius: 8px;
    margin-top: 12px;
    padding-top: 15px;
}

.field-label {
    font-weight: 600;
    margin-bottom: 4px;
}

/* Botones de diálogo */
#dialogButtons {
    margin-top: 20px;
    padding-top: 15px;
    border-top: 1px solid;
}

#btnSave {
    background-color: #28a745;
    color: white;
    font-weight: bold;
    padding: 8px 20px;
}

#btnCancel {
    background-color: #6c757d;
    color: white;
    padding: 8px 20px;
}

/* Placeholder para páginas en desarrollo */
.placeholder-text {
    background-color: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #f8f9fa, stop:1 #e9ecef);
    border: 2px dashed #dee2e6;
    border-radius: 10px;
    padding: 40px;
    color: #6c757d;
    font-size: 14px;
    text-align: center;
    line-height: 1.6;
}

/* Tarjetas del dashboard */
#tarjeta {
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 white, stop:1 #f8f9fa);
    border: 1px solid #dee2e6;
    border-radius: 8px;
    padding: 15px;
    min-height: 120px;
}

#tarjeta:hover {
    border-color: #007bff;
}

.tarjeta-header {
    margin-bottom: 10px;
}

.tarjeta-icon {
    font-size: 28px;
    margin-right: 10px;
}

.tarjeta-title {
    font-weight: bold;
    font-size: 13px;
    color: inherit;
}