/* Estilos para formularios */

/* Contenedor de formulario */
.form-container {
    background-color: white;
    border: 1px solid #dee2e6;
    border-radius: 8px;
    padding: 24px;
}

/* Filas de formulario */
.form-row {
    spacing: 16px;
}

/* Grupos de campos */
.form-group {
    spacing: 8px;
}

/* Labels de formulario */
.form-label {
    font-weight: 600;
    color: #495057;
    font-size: 13px;
    margin-bottom: 4px;
}

    content: " *";
    color: #dc3545;
}

/* Campos de formulario */
.form-input {
    min-height: 36px;
    border-radius: 4px;
    border: 1px solid #ced4da;
    padding: 6px 12px;
    font-size: 14px;
}

.form-input:focus {
    border-color: #007bff;
    outline: none;
    border: 2px solid #3498DB;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #ffffff, stop:1 #f8f9fa);
}

.form-input.error {
    border-color: #dc3545;
    background-color: #fff5f5;
}

.form-input.success {
    border-color: #28a745;
    background-color: #f0fff4;
}

.form-input[readOnly="true"] {
    background-color: #f8f9fa;
    color: #6c757d;
    border-color: #e9ecef;
}

/* Textarea */
.form-textarea {
    min-height: 100px;
    border-radius: 4px;
    border: 1px solid #ced4da;
    padding: 8px 12px;
    font-size: 14px;
    font-family: inherit;
}

.form-textarea:focus {
    border-color: #007bff;
    outline: none;
    border: 2px solid #3498DB;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #ffffff, stop:1 #f8f9fa);
}

